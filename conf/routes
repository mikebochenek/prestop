POST     /api/dishes/new             controllers.Dishes.create

GET      /dishedit/:id              controllers.Dishes.getById(id: Long)
POST     /dishedit                  controllers.Dishes.save
POST	 /dish						controllers.Dishes.upload(id: Long)

